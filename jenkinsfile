pipeline {
    agent any
    environment {
        DOCKER_USER = 'ahmedabdelaziz5357580'  // Ton nom d'utilisateur DockerHub
        DOCKER_PASS = credentials('finale-dockerhub') // Récupère ton mot de passe/token depuis Jenkins
    }
    stages {
        stage('Login DockerHub') {
            steps {
                script {
                    // Connexion à DockerHub avec les variables d'environnement
                    bat """
                        docker login -u %DOCKER_USER% -p %DOCKER_PASS%
                    """
                }
            }
        }
        // Autres étapes de ton pipeline ici...
    }
}
