pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-ahmed')
    }
    stages {
        stage('SCM Checkout') {
            steps {
                script {
                    if (!fileExists('DevProjOps')) {
                        git 'https://github.com/ahmedbenabdelaziz/DevProjOps.git'
                    } else {
                        echo 'Le répertoire DevProjOps existe déjà, saut de clonage.'
                    }
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-ahmed', usernameVariable: 'DOCKERHUB_CREDENTIALS_USR', passwordVariable: 'DOCKERHUB_CREDENTIALS_PSW')]) {
                        bat """
                            echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin
                        """
                    }
                }
            }
        }
    }
}
