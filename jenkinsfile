pipeline {
    agent any
    environment {
        DOCKER_USER = 'ahmedabdelaziz5357580'  // Ton nom d'utilisateur DockerHub
        DOCKER_PASS = credentials('docker-hub-ahmed')  // Utilisation des credentials Jenkins
    }
    stages {
        stage('Login DockerHub') {
            steps {
                script {
                    // Connexion à DockerHub en utilisant les credentials de Jenkins
                    bat """
                        echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                    """
                }
            }
        }
        // Autres étapes de ton pipeline ici...
    }
}
