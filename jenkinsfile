pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-ahmed')
    }
    stages {
        stage('SCM Checkout') {
            steps {
                script {
                    // Clone le repo GitHub sur l'agent
                    bat 'git clone https://github.com/ahmedbenabdelaziz/DevProjOps.git'
                }
            }
        }
        stage('Login to Docker Hub') {
            steps {
                script {
                    // Connexion Ã  Docker Hub avec les identifiants
                    bat '''
                    set DOCKERHUB_CREDENTIALS_USR=%DOCKERHUB_CREDENTIALS_USR%
                    set DOCKERHUB_CREDENTIALS_PSW=%DOCKERHUB_CREDENTIALS_PSW%
                    docker login -u %DOCKERHUB_CREDENTIALS_USR% -p %DOCKERHUB_CREDENTIALS_PSW%
                    '''
                }
            }
        }
    }
}
