pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-ahmed')
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git 'https://github.com/ahmedbenabdelaziz/DevProjOps.git'
            }
        }
        stage('Login to Docker Hub') {
            steps {
                script {
                    sh 'docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW'
                }
            }
        }
    
    }
}
