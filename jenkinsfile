pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-ahmedben')
        FLUTTER_HOME = "C:\\Users\\LENOVO\\Downloads\\flutter_windows_3.29.2-stable\\flutter"
        PATH = "${FLUTTER_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('SCM Checkout') {
            steps {
                script {
                    if (!fileExists('DevProjOps')) {
                        echo 'Cloning DevProjOps repository...'
                        git 'https://github.com/ahmedbenabdelaziz/DevProjOps.git'
                    } else {
                        echo 'Le répertoire DevProjOps existe déjà, saut de clonage.'
                    }
                }
            }
        }

        stage('Verify Flutter Installation') {
            steps {
                script {
                    echo 'Vérification de l’installation de Flutter...'
                    bat 'flutter --version'
                    bat 'flutter doctor'
                }
            }
        }

        stage('Build Frontend (Flutter)') {
            steps {
                script {
                    dir('DevProjOps/DevOpsFrnt') {
                        echo 'Fetching frontend dependencies...'
                        bat 'flutter pub get'
                        
                        echo 'Building Flutter web app...'
                        bat 'flutter build web'
                    }
                }
            }
        }
    }
}
